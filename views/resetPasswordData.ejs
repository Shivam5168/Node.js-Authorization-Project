<div class="row mt-5">
    <div class="col-md-6 m-auto">
      <div class="card card-body">
        <h3 class="text-center mb-3"><i class="fas fa-sign-in-alt"></i>  Reset Password</h3>

        <form action="/user/resetPasswordData" method="POST">
          <div class="form-group">
            <label for="email">New password</label>
            <input
              type="password"
              id="password"
              name="password"
              class="form-control"
              placeholder="Enter New Password"
            />
          </div>
          <div class="form-group">
            <label for="password">Confirm Password</label>
            <input
              type="password"
              id="password"
              name="password"
              class="form-control"
              placeholder="Enter Confirm Password"
            />
          </div>
          <button type="submit" class="btn btn-primary btn-block">Save</button>
        </form>
      </div>
    </div>
  </div>